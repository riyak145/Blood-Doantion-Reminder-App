<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity">

    <!-- Fixed Header -->
    <include
        android:id="@+id/toolbar_red"
        layout="@layout/toolbar_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_red"
        app:layout_constraintBottom_toTopOf="@id/footer_include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Heading -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Our App"
                android:textColor="@color/color1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Paragraph -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:justificationMode="inter_word"
                android:text="Our Blood Donation Reminder app is designed to save lives by encouraging timely blood donations. By helping users track their eligibility, donation history, and sending reminders, we aim to build a responsible community of regular donors." />

            <!-- Subheading -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key Features"
                android:textColor="@color/color1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Bullets -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:justificationMode="inter_word"
                android:text="• Personalized donation reminders based on gender and last \tdonation date\n• Donation eligibility calculator\n• Donation history tracking\n• Educational resources on blood donation\n• Notification log to view past alerts" />

            <!-- Subheading -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Mission"
                android:textColor="@color/color1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Paragraph -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:justificationMode="inter_word"
                android:text="We are committed to promoting voluntary blood donation through technology. Our goal is to ensure that no life is lost due to unavailability of blood. Your one contribution can make a life-saving difference." />

        </LinearLayout>
    </ScrollView>

    <!-- Fixed Footer -->
    <include
        android:id="@+id/footer_include"
        layout="@layout/footer_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
