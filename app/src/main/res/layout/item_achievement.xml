<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:elevation="4dp"
    android:padding="12dp"
    android:radius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="12dp"
        android:orientation="horizontal">

        <!-- Achievement Icon -->
        <ImageView
            android:id="@+id/iconAchievement"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo_benefits"
            android:contentDescription="Icon"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Drop"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="@color/black" />

            <!-- Description -->
            <TextView
                android:id="@+id/textDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Youâ€™ve made your first blood donation."
                android:textSize="18sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/black" />

            <!-- ProgressBar -->
            <ProgressBar
                android:id="@+id/progressAchievement"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="8dp"
                android:progress="100"
                android:progressTint="@color/color1"
                android:backgroundTint="@android:color/darker_gray"
                android:max="100" />

            <!-- Status Text -->
            <TextView
                android:id="@+id/textProgressLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed 100%"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
