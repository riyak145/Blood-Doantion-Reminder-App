    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BloodTypesActivity"
    android:background="@color/color7">

    <!-- Header -->
    <include
        layout="@layout/toolbar_red"
        android:id="@+id/toolbar_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Scrollable Blood Type Cards -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_red"
        app:layout_constraintBottom_toTopOf="@id/footer_include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp">

            <!-- BLOOD CARD TEMPLATE - repeat for each type -->
            <!-- Repeat this block for each blood type -->
            <!-- Example: A+ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="6dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:layout_marginTop="8dp"
                android:clipToOutline="true"
                android:backgroundTintMode="src_in"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/rounded_card_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- Optionally use an SVG here (vector drawable) -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/logo_drop"
                        app:tint="@color/color6"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A+ (A positive)"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/color6"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Can donate to: A+, AB+"
                    android:layout_marginTop="12dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Can receive from: A+, A-, O+, O-"
                    android:layout_marginTop="4dp"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Common in India\n• Highly needed for patients with A+ and AB+ blood types."
                    android:layout_marginTop="6dp"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif"
                    android:justificationMode="inter_word" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="6dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:layout_marginTop="8dp"
                android:clipToOutline="true"
                android:backgroundTintMode="src_in"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/rounded_card_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
