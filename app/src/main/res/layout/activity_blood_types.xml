                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif"
                    android:justificationMode="inter_word" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
